
 ::-webkit-scrollbar {
 	width:6px;
 	height:6px;
 }
 ::-webkit-scrollbar-track{
   background: rgb(239, 239, 239);
   border-radius:2px;
 }
 ::-webkit-scrollbar-thumb{
   background: #bfbfbf;
   border-radius:10px;
 }
 ::-webkit-scrollbar-thumb:hover{
   background: #001938;
 }
